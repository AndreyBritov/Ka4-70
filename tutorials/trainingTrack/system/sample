sample
{
    libs            (sampling);
    type            surfaces;

    setFormat       raw;
    surfaceFormat   raw;
    
    writeControl    writeTime;
    interpolationScheme cellPatchConstrained;

    fields          (p wallShearStress pMean wallShearStressMean U);

    surfaces
    {
        planeSample
        {
              // Sampling on triSurface
            type        plane;
	    planeType   pointAndNormal;
	    
	    pointAndNormalDict
	    {
		normal (0 1 0);
		point (0 0 0);
	    }

            interpolate true;
	    triangulate false;
            surfaceFormat   vtp;
        }



	    triSurfaceSampling_foam
        {
              // Sampling on triSurface
            type        patch;
	    patches	(down);
            interpolate true;
	    triangulate true;
            surfaceFormat   foam;
        }
Bottom_vtp
        {
              // Sampling on triSurface
            type        patch;
	    patches	(down);
	    interpolate true;
	    triangulate	true;
            surfaceFormat   vtp;
        }
    }
}

